<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    tools:context="org.gitmad.beginners.sessionsix.MainActivity"
    android:baselineAligned="false">


    <fragment
        android:id="@+id/chooseThreadFragment"
        android:name="org.gitmad.beginners.sessionsix.ChooseThreadFragment"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_choosethread" />


    <ScrollView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/detailsFragment"
            android:name="org.gitmad.beginners.sessionsix.ThreadDetailsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_threaddetails" />

    </ScrollView>

</LinearLayout>